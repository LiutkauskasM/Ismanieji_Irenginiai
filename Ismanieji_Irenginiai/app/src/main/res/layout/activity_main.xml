<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:id="@+id/recipe_list_btn_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="openRecipeListActivity"
            android:text="Receptai"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/about_btn_id"
            app:layout_constraintVertical_bias="0.81" />

    <Button
            android:id="@+id/about_btn_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="openAboutActivity"
            android:text="Apie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_list_btn_id" />



</androidx.constraintlayout.widget.ConstraintLayout>