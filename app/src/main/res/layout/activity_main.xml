<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/personal_recipe_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="openAboutActivity"
        android:text="Apie"
        app:layout_constraintBottom_toTopOf="@+id/add_recipe_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_list_btn_id"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/add_recipe_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:onClick="OpenAddRecipyActivity"
        android:text="Pridėti receptą"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_recipe_btn_id" />

    <Button
        android:id="@+id/recipe_list_btn_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="openRecipeListActivity"
        android:text="Receptai"
        app:layout_constraintBottom_toTopOf="@+id/personal_recipe_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>